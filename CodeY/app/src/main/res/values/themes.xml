<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CodeY" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_black</item>
        <item name="android:navigationBarColor">@color/theme_black</item>
        <!-- Default font family for entire application -->
        <item name="android:fontFamily">@font/montserrat</item>
        <!-- Set the default text colour -->
        <item name="android:textColor">@color/theme_black</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>